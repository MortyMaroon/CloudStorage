<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="com.controller.Controller">
    <MenuBar>
        <Menu text="Файл">
            <MenuItem text="Выйти из программы"/>
        </Menu>
    </MenuBar>

        <HBox VBox.vgrow="ALWAYS">
            <fx:include fx:id="client" source="panel.fxml" HBox.hgrow="ALWAYS"/>
            <fx:include fx:id="server" source="panel.fxml" HBox.hgrow="ALWAYS"/>
        </HBox>

       <HBox spacing="5">
              <Button maxWidth="Infinity" focusTraversable="false" text="Копироваьб файл" HBox.hgrow="ALWAYS" onAction="#copyBtnAction"/>
              <Button maxWidth="Infinity" focusTraversable="false" text="Переместить файл" HBox.hgrow="ALWAYS" />
              <Button maxWidth="Infinity" focusTraversable="false" text="Удалить файл" HBox.hgrow="ALWAYS" />
              <Button maxWidth="Infinity" focusTraversable="false" text="Выход из программы" HBox.hgrow="ALWAYS" onAction="#btnExitAction"/>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
       </HBox>
</VBox>
